{
  "name": "docs",
  "version": "0.1.0",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "app:prebuild": "mkver src/version.ts",
    "commit": "git-cz",
    "dev": "yarn app:prebuild && next dev",
    "build": "yarn app:prebuild && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "yarn husky install && yarn app:prebuild && yarn server:prebuild",
    "pre-commit": "yarn lint:check && yarn test:ci && yarn e2e:headless",
    "eslint:check": "eslint \"*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"*.{js,jsx,ts,tsx}\" --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write . --ignore-unknown",
    "lint:check": "yarn eslint:check && yarn prettier:check",
    "lint:fix": "yarn eslint:fix && yarn prettier:write",
    "lint-staged:check": "lint-staged",
    "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "component": "cypress open --component",
    "component:headless": "cypress run --component",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "server:copy-views": "ts-node --project tsconfig.script.json scripts/copy.ts --in server/views --out .docs-server",
    "server:build": "yarn server:prebuild && rimraf .docs-server && tsc -p tsconfig.server.json && yarn server:copy-views",
    "server:start": "yarn server:prebuild && node .docs-server/app.js start",
    "server:stop": "node .docs-server/app.js stop",
    "server:dev": "yarn server:prebuild && rimraf .docs-server && tsc-watch --noClear -p ./tsconfig.server.json --onSuccess \"node .docs-server/app.js start --debug true\"",
    "server:prebuild": "mkver server/version.ts"
  },
  "dependencies": {
    "@types/node": "20.10.0",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "aws-sdk": "^2.1503.0",
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "eslint": "8.54.0",
    "eslint-config-next": "14.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.1",
    "morgan": "^1.10.0",
    "next": "14.0.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "redis": "^4.6.11",
    "socket.io": "^4.7.2",
    "typescript": "5.3.2",
    "validator": "^13.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/hpp": "^0.2.5",
    "@types/morgan": "^1.9.9",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/shelljs": "^0.8.15",
    "@types/validator": "^13.11.7",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "chalk": "4.1.2",
    "cypress": "^13.6.0",
    "eslint-config-prettier": "^9.0.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "mkver": "^2.1.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^5.0.5",
    "shelljs": "^0.8.5",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "winston": "^3.11.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*": [
      "prettier --check --ignore-unknown"
    ]
  }
}
